{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                    {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
                    <div class="tab-content">
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="entry-merchant-id">{{ entry_merchant_code }}</label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_interswitch_merchant_code" value="{{ payment_interswitch_merchant_code }}" placeholder="{{ entry_merchant_code }}" id="entry-app-id" class="form-control"/>
                                {% if error_merchant_code %}
                                    <div class="text-danger">{{ error_merchant_code }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="entry-term-id">{{ entry_terminal_id }}</label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_interswitch_terminal_id" value="{{ payment_interswitch_terminal_id }}" placeholder="{{ entry_terminal_id }}" id="entry-app-id" class="form-control"/>
                                {% if error_terminal_id %}
                                    <div class="text-danger">{{ error_terminal_id }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="entry-interswitch-public-key">{{ entry_domain }}</label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_interswitch_domain" value="{{ payment_interswitch_domain }}" placeholder="{{ entry_domain }}" id="entry-domain" class="form-control"/>
                                {% if error_domain %}
                                    <div class="text-danger">{{ error_domain }}</div>
                                {% endif %}
                            </div>
                        </div>
                      
                        </div>
                              <div class="form-group required">
                            <label class="col-sm-2 control-label" for="entry-interswitch-country">{{ entry_country }}</label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_interswitch_country" value="{{ payment_interswitch_country }}" placeholder="{{ entry_country }}" id="entry-app-id" class="form-control"/>
                                {% if error_country %}
                                    <div class="text-danger">{{ error_country}}</div>
                                {% endif %}
                            </div>
                        </div>
                       

                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-test"><span data-toggle="tooltip" title="{{ help_enviroment }}">{{ entry_enviroment }}</span></label>
                            <div class="col-sm-10">
                                <select name="payment_interswitch_enviroment" id="input-test" class="form-control" required>
                                    {% if payment_interswitch_enviroment== 'sandbox' %}
                                        <option value="sandbox" selected="selected">{{ text_sandbox }}</option>
                                    {% else %}
                                        <option value="sandbox">{{ text_sandbox }}</option>
                                    {% endif %}
                                    {% if payment_interswitch_enviroment == 'live' %}
                                        <option value="live" selected="selected">{{ text_live }}</option>
                                    {% else %}
                                        <option value="live">{{ text_live }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                            <div class="col-sm-10">
                                <select name="payment_interswitch_status" id="input-status" class="form-control">
                                    {% if payment_interswitch_status %}
                                        <option value="1" selected="selected">{{ text_enabled }}</option>
                                        <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                        <option value="1">{{ text_enabled }}</option>
                                        <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        
                    </div>
                </form>
                <div class="alert alert-info">{{ help_interswitch_setup }}</div>
            </div>
        </div>
    </div>
</div>
{{ footer }}